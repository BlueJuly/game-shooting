package  {		import flash.display.Sprite;	import flash.events.Event; 	import flash.display.MovieClip;		public class Fighter extends MovieClip{				public function Fighter() {			gotoAndStop(1);			addEventListener(Event.ADDED_TO_STAGE,onAdd);		}				private function onAdd(e:Event):void{			addEventListener(Event.ENTER_FRAME, onEnterframe);		}		private function onEnterframe(e:Event):void{			this.x = stage.mouseX;			this.y = stage.mouseY;		}			public function remove_Fighter():void{			parent.removeChild(this);			removeEventListener(Event.ENTER_FRAME, onEnterframe);		}		}	}